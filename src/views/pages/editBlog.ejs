<div class="w-[90vw] md:w-[80vw] xl:w-[70vw] mx-auto p-6 bg-white rounded-2xl shadow-lg my-5">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">Edit Blog:</h2>

  <form action="/blog/<%= blog.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="space-y-5">
    <!-- Blog Title -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
      <input name="title" value="<%= blog.title %>" type="text" placeholder="Enter blog title"
        class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500" />
    </div>

    <!-- Blog Content -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Content</label>
      <textarea name="content" rows="6" placeholder="Write your blog content..."
        class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500"><%= blog.content %></textarea>
    </div>

    <!-- Category -->
    <div>
      <label class="block text-sm font-semibold text-gray-700 mb-2">Category</label>
      <select name="category"
        class="w-full h-12 px-4 text-base border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white"
        required>
        <option value="" disabled <%=!blog.category ? 'selected' : '' %>>Select Category</option>
        <option value="Technology" <%=blog.category==='Technology' ? 'selected' : '' %>>ğŸš€ Technology</option>
        <option value="Startup" <%=blog.category==='Startup' ? 'selected' : '' %>>ğŸŒ± Startup</option>
        <option value="Self-Improvement" <%=blog.category==='Self-Improvement' ? 'selected' : '' %>>ğŸ§  Self-Improvement</option>
        <option value="Career" <%=blog.category==='Career' ? 'selected' : '' %>>ğŸ’¼ Career</option>
        <option value="Education" <%=blog.category==='Education' ? 'selected' : '' %>>ğŸ“š Education</option>
        <option value="Finance" <%=blog.category==='Finance' ? 'selected' : '' %>>ğŸ’° Finance</option>
        <option value="Gaming" <%=blog.category==='Gaming' ? 'selected' : '' %>>ğŸ® Gaming</option>
        <option value="Creative" <%=blog.category==='Creative' ? 'selected' : '' %>>ğŸ’¡ Creative</option>
        <option value="Health" <%=blog.category==='Health' ? 'selected' : '' %>>ğŸŒ¿ Health</option>
        <option value="Lifestyle" <%=blog.category==='Lifestyle' ? 'selected' : '' %>>ğŸŒ´ Lifestyle</option>
      </select>
    </div>



    <!-- Image Preview -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Current Image</label>
      <img src="<%= blog.image.url %>" alt="Current Blog Image" class="w-48 rounded-xl shadow" />
    </div>

    <!-- Blog Image -->
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Upload Image</label>
      <input name="image" type="file" accept="image/*"
        class="w-full file:mr-4 file:py-2 file:px-4 file:border-0 file:rounded-xl file:bg-blue-600 file:text-white file:cursor-pointer hover:file:bg-blue-700" />
    </div>

    <!-- Submit Button -->
    <div class="text-right">
      <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-xl hover:bg-green-700 transition-all">
        Post Blog
      </button>
    </div>
  </form>
</div>
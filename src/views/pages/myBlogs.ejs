<section class="pt-10 pb-24 bg-gradient-to-br from-indigo-50 via-white to-pink-50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl font-bold text-gray-900 mb-10">My Blogs</h2>

    <% if (blogs.length === 0) { %>
      <div class="text-2xl font-semibold text-gray-600">You don't have any blogs.</div>
    <% } else { %>

    <!-- ðŸ’  Responsive Blog Grid Matching Home Page -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-8 justify-items-center">
      <% blogs.forEach(blog => { %>
        <div
          class="bg-white border border-gray-200 rounded-2xl overflow-hidden shadow-md transform transition duration-300 hover:scale-105 hover:shadow-xl w-full max-w-sm">

          <!-- ðŸ“· Blog Image -->
          <div class="aspect-[4/3] w-full overflow-hidden">
            <img src="/<%= blog.imagePath %>" alt="<%= blog.title %> image"
              class="w-full h-full object-cover transition-transform duration-300 hover:scale-105" />
          </div>

          <!-- ðŸ“ Blog Details -->
          <div class="p-5 text-left">
            <div class="flex justify-between text-sm text-gray-500 mb-2">
              <span class="text-indigo-600 font-medium">
                <%= new Date(blog.date).toLocaleDateString("en-GB", {
                  day: "2-digit", month: "short", year: "numeric"
                }) %>
              </span>
              <span class="text-gray-400">- <%= blog.author.name %></span>
            </div>

            <h4 class="text-lg font-bold text-gray-800 mb-2"><%= blog.title %></h4>

            <p class="text-sm text-gray-600 line-clamp-2">
              <%= blog.content %>
            </p>

            <a href="/blog/<%= blog._id %>" class="text-indigo-600 font-medium text-sm inline-block mt-4 hover:underline">Read more â†’</a>
          </div>
        </div>
      <% }) %>
    </div>
    <% } %>
  </div>
</section>
